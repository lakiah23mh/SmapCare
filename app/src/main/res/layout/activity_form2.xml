<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_form2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dataibu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:text="Data Diri Ibu"
                android:textSize="35dp"></TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_namaibu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_namaibu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama lengkap Ibu"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_tempatlahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/formTempatlahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tempat lahir Ibu"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_tgllahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_tgllahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Tanggal lahir Ibu"
                    android:inputType="date"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_agama"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_agama"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:text="Agama"
                    android:textColor="@color/colorTextView"
                    android:textSize="20dp"></TextView>

                <Spinner
                    android:id="@+id/sp_agama"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="250dp"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_margin="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/spinner_bg"
                    android:dropDownWidth="250dp"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:entries="@array/agama"
                    android:popupBackground="@android:color/transparent"
                    android:popupElevation="3dp"
                    android:stateListAnimator="@drawable/spinner_sla"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Ibu"
                    android:inputType="textMultiLine"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_pendidikan"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_pendidikan"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:text="Pendidikan terakhir Ibu"
                    android:textColor="@color/colorTextView"
                    android:textSize="20dp"></TextView>

                <Spinner
                    android:id="@+id/sp_pendidikan"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="130dp"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_margin="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/spinner_bg"
                    android:dropDownWidth="130dp"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:popupBackground="@android:color/transparent"
                    android:popupElevation="3dp"
                    android:stateListAnimator="@drawable/spinner_sla"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:entries="@array/pendidikan"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NIK Ibu"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/ip_pekerjaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_pekerjaan"
                            android:layout_width="wrap_content"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="5dp"
                            android:textColor="@color/colorTextView"
                            android:textSize="20dp"
                            android:text="Status pekerjaan" />

                            <RadioGroup
                                android:id="@+id/rg_pendidikan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="20dp"
                                android:paddingBottom="15dp"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp">

                                <RadioButton
                                    android:id="@+id/rb_bekerja"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bekerja"
                                    android:textSize="15dp"/>

                                <RadioButton
                                    android:id="@+id/rb_tidakbekerja"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tidak Bekerja"
                                    android:textSize="15dp"/>
                            </RadioGroup>
                    </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_bb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_bb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Berat badan Ibu saat ini"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_hb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_hb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kadar HB Ibu Saat ini"
                    android:inputType="number"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_imunisasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorTextView"
                    android:textSize="20dp"
                    android:text="Apakah Ibu pernah melakukan imunisasi TT?" />

                <RadioGroup
                    android:id="@+id/rg_imunisasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp">

                    <RadioButton
                        android:id="@+id/rb_pernah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="15dp"
                        android:text="Pernah" />

                    <RadioButton
                        android:id="@+id/rb_tidakpernah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:textSize="15dp"
                        android:text="Belum Pernah" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_datasuami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:text="Data Diri Suami"
                android:textSize="35dp">
            </TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_namasuami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_namasuami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama lengkap Suami"
                    android:inputType="textPersonName"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_nosuami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nosuami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="20sp"
                    android:hint="Nomor HP Suami"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_agamasuami"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_agamasuami"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:text="Agama Suami"
                    android:textColor="@color/colorTextView"
                    android:textSize="20dp"></TextView>

                <Spinner
                    android:id="@+id/sp_agamasuami"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="204dp"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_margin="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/spinner_bg"
                    android:dropDownWidth="205dp"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:paddingRight="14dp"
                    android:popupBackground="@android:color/transparent"
                    android:popupElevation="3dp"
                    android:stateListAnimator="@drawable/spinner_sla"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:entries="@array/agama"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_pekerjaansuami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pekerjaansuami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pekerjaan Suami"
                    android:inputType="text"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ll_pendidikansuami"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/tv_pendidikansuami"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:text="Pendidikan terakhir Suami"
                    android:textColor="@color/colorTextView"
                    android:textSize="20dp"></TextView>

                <Spinner
                    android:id="@+id/sp_pendidikansuami"
                    style="@style/Widget.AppCompat.Spinner"
                    android:layout_width="112dp"
                    android:layout_height="?attr/dropdownListPreferredItemHeight"
                    android:layout_margin="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/spinner_bg"
                    android:dropDownWidth="112dp"
                    android:dropDownVerticalOffset="?attr/dropdownListPreferredItemHeight"
                    android:paddingRight="14dp"
                    android:popupBackground="@android:color/transparent"
                    android:popupElevation="3dp"
                    android:stateListAnimator="@drawable/spinner_sla"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:entries="@array/pendidikan"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ip_alamatsuami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/colorTextView">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_alamatsuami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat Suami"
                    android:inputType="textMultiLine"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_next2"
                android:layout_width="125dp"
                android:layout_height="47dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="210dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="41dp"
                android:background="@drawable/buttonshape"
                android:text="Next" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>